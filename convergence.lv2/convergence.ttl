@prefix convergence: <https://github.com/duffrecords/convergence#> .

<https://github.com/duffrecords/convergence>
    a lv2:Plugin ,
        lv2:PitchPlugin ;
    doap:maintainer <https://duffrecords.com/> ;
    doap:name "Convergence" ;
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <https://github.com/duffrecords/convergence> ;
    lv2:microVersion 0 ; lv2:minorVersion 0 ;
    # lv2:requiredFeature urid:map , lv2:inPlaceBroken ;
    lv2:optionalFeature lv2:hardRTCapable ;
    lv2:requiredFeature urid:map ;
    lv2:port [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 0 ;
        lv2:symbol "input" ;
        lv2:name "In"
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 1 ;
        lv2:symbol "output" ;
        lv2:name "Out"
    ] , [
        a lv2:InputPort ,
                lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "threshold" ;
        lv2:name "Threshold" ;
        lv2:default -3.0 ;
        lv2:minimum -60.0 ;
        lv2:maximum 0.0 ;
        units:unit units:db ;
        lv2:scalePoint [
                rdfs:label "0" ;
                rdf:value 0.0
        ] , [
                rdfs:label "-3" ;
                rdf:value -3.0
        ] , [
                rdfs:label "-6" ;
                rdf:value -6.0
        ], [
                rdfs:label "-9" ;
                rdf:value -9.0
        ], [
                rdfs:label "-12" ;
                rdf:value -12.0
        ], [
                rdfs:label "-15" ;
                rdf:value -15.0
        ], [
                rdfs:label "-18" ;
                rdf:value -18.0
        ]
    ] , [
        a lv2:InputPort ,
                lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "detune" ;
        lv2:name "Detune" ;
        lv2:default -1.0 ;
        lv2:minimum -24.0 ;
        lv2:maximum 0.0 ;
        units:unit units:semitone12TET ;
        lv2:scalePoint [
                rdfs:label "-0.0" ;
                rdf:value -0.0
        ] , [
                rdfs:label "-1.0" ;
                rdf:value -1.0
        ] , [
                rdfs:label "-2.0" ;
                rdf:value -2.0
        ] , [
                rdfs:label "-3.0" ;
                rdf:value -3.0
        ] , [
                rdfs:label "-4.0" ;
                rdf:value -4.0
        ] , [
                rdfs:label "-5.0" ;
                rdf:value -5.0
        ] , [
                rdfs:label "-6.0" ;
                rdf:value -6.0
        ] , [
                rdfs:label "-7.0" ;
                rdf:value -7.0
        ] , [
                rdfs:label "-8.0" ;
                rdf:value -8.0
        ] , [
                rdfs:label "-9.0" ;
                rdf:value -9.0
        ] , [
                rdfs:label "-10.0" ;
                rdf:value -10.0
        ] , [
                rdfs:label "-11.0" ;
                rdf:value -11.0
        ] , [
                rdfs:label "-12.0" ;
                rdf:value -12.0
        ]
    ] , [
        a lv2:InputPort ,
                lv2:ControlPort ;
        lv2:index 4 ;
        lv2:symbol "attack" ;
        lv2:name "Attack" ;
        lv2:default 0 ;
        lv2:minimum 0 ;
        lv2:maximum 100 ;
        units:unit units:ms ;
        lv2:scalePoint [
                rdfs:label "100" ;
                rdf:value 100
        ] , [
                rdfs:label "50" ;
                rdf:value 50
        ] , [
                rdfs:label "40" ;
                rdf:value 40
        ] , [
                rdfs:label "30" ;
                rdf:value 30
        ] , [
                rdfs:label "20" ;
                rdf:value 20
        ] , [
                rdfs:label "10" ;
                rdf:value 10
        ] , [
                rdfs:label "0" ;
                rdf:value 0
        ]
    ] , [
        a lv2:InputPort ,
                lv2:ControlPort ;
        lv2:index 5 ;
        lv2:symbol "release" ;
        lv2:name "Release" ;
        lv2:default 2 ;
        lv2:minimum 0 ;
        lv2:maximum 1000 ;
        units:unit units:ms ;
        lv2:scalePoint [
                rdfs:label "1000" ;
                rdf:value 1000
        ] , [
                rdfs:label "750" ;
                rdf:value 750
        ] , [
                rdfs:label "500" ;
                rdf:value 500
        ] , [
                rdfs:label "250" ;
                rdf:value 200
        ] , [
                rdfs:label "100" ;
