        lv2:symbol "notify" ;
        lv2:name "Notify" ;
    ] , [
        a lv2:InputPort, lv2:ControlPort ;
        lv2:index 8 ;
        lv2:symbol "gain" ;
        lv2:name "Makeup Gain" ;
        lv2:default -6.0 ;
        lv2:minimum -80.0 ;
        lv2:maximum 20.0;
