        a lv2:InputPort ,
                lv2:ControlPort ;
        lv2:index 6 ;
        lv2:symbol "mix" ;
        lv2:name "Mix" ;
        lv2:default 1.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        units:unit units:pc ;
        lv2:scalePoint [
                rdfs:label "Wet" ;
                rdf:value 1.0
        ] , [
                rdfs:label "" ;
                rdf:value 0.5
        ] , [
                rdfs:label "Dry" ;
                rdf:value 0.0
        ]
